{
  "name": "vue3-vite-crx",
  "license": "MIT",
  "version": "0.0.0",
  "scripts": {
    "dev": "npm exec -- cross-env CRX_ENV=development run-p dev:*",
    "dev:code": "vite build",
    "dev:content": "vite build --config vite.content.config.ts",
    "dev:copy": "node scripts/monitor.js",
    "build": "cross-env CRX_ENV=production pnpm clear && vite build && vite build --config vite.content.config.ts && node scripts/monitor.js",
    "clear": "rimraf crx",
    "test": "vitest",
    "ui": "vitest --ui",
    "preinstall": "npx only-allow pnpm",
    "preview": "vite preview --open",
    "prepare": "husky install",
    "lint-staged": "lint-staged",
    "eslint": "eslint . --ext .js,.jsx,.ts,.tsx,.vue",
    "eslint:fix": "eslint . --fix --ext .js,.jsx,.ts,.tsx,.vue",
    "format": "prettier --write \"./**/*.{html,vue,ts,js,json,md}\"",
    "lint": "pnpm eslint & pnpm stylelint",
    "lint:fix": "pnpm eslint:fix & pnpm stylelint:fix",
    "stylelint": "stylelint \"./**/*.{css,scss,sass,vue,html}\"",
    "stylelint:fix": "stylelint \"./**/*.{css,scss,sass,vue,html}\" --fix"
  },
  "dependencies": {
    "idb": "^7.1.1",
    "pinia": "^2.0.27",
    "vue": "^3.2.41"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.3.0",
    "@commitlint/config-conventional": "^17.3.0",
    "@types/node": "^18.11.10",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vitejs/plugin-vue": "^3.2.0",
    "@vitest/ui": "^0.25.3",
    "chokidar": "^3.5.3",
    "chrome-types": "^0.1.153",
    "commitizen": "^4.2.5",
    "cross-env": "^7.0.3",
    "cz-customizable": "^7.0.0",
    "eslint": "^8.29.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-vue": "^9.8.0",
    "fs-extra": "^11.1.0",
    "husky": "^8.0.2",
    "lint-staged": "^13.0.4",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.19",
    "postcss-html": "^1.5.0",
    "postcss-scss": "^4.0.6",
    "prettier": "^2.8.0",
    "rimraf": "^3.0.2",
    "sass": "^1.56.1",
    "stylelint": "^14.15.0",
    "stylelint-config-prettier": "^9.0.4",
    "stylelint-config-recommended-scss": "^8.0.0",
    "stylelint-config-standard": "^29.0.0",
    "stylelint-config-standard-vue": "^1.0.0",
    "stylelint-order": "^5.0.0",
    "stylelint-scss": "^4.3.0",
    "typescript": "^4.6.4",
    "unplugin-auto-import": "^0.12.0",
    "vite": "^3.2.3",
    "vite-plugin-ejs": "^1.6.4",
    "vite-plugin-eslint": "^1.8.1",
    "vite-plugin-replace": "^0.1.1",
    "vite-plugin-stylelint": "^3.3.1",
    "vitest": "^0.25.3",
    "vue-tsc": "^1.0.9",
    "ws": "^8.11.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-customizable"
    }
  }
}
